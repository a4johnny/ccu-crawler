@model CCU_Crawler.Models.SearchCourse

@{
    ViewBag.Title = "PageList";
}

<div class="text-center">
    @if (Model is object && Model.Page <= 5)
    {
        for (var page = 1; page < 11; page++)
        {
            Model.Page = page;
            @Html.ActionLink("　" + page.ToString() + "　", "Index", "CourseSearch", Model, null)
        }
    }
    else
    {
        var count = Model.Page + 5;
        for (var page = Model.Page - 4; page < count; page++)
        {
            Model.Page = page;
            @Html.ActionLink("　" + page.ToString() + "　", "Index", "CourseSearch", Model, null)
        }
    }
</div>